<% provide(:title, 'Edit monthly_goal') %>
<% provide(:button, '更新') %>
<h1>今月の目標</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
  <%= form_for @monthly_goals do |f| %>
    <%= f.label :１〜３月 %>
    <%= f.text_field :content %>
      
    <%= f.submit "Submit" %>
  <% end %>
  </div>
  <div class="col-md-1 col-md-offset-1">
    <%= link_to "キャンセル", root_path , class: "btn" , id: "cancel" %>
  </div>
</div>